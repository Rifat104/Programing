void payment()
{
    int m;
    char y1[5];
    printf("Please Select Your Payment Method\n");
    printf("Please Enter The Number Of Payment Method\n");
    printf("1.Bkash\n");
    printf("2.Nagad\n");
    printf("3.Rocket\n");
    printf("4.Cash On delivary\n");
    scanf("\n%d",&m);
    if(m==1)
    {
        strcpy(m1.method,"Bkash");
        printf("Please Make Payment To This Number (01845878722)\n");
        printf("Have You Made Payment\n");
        printf("Enter 'Y/y' If You Have Made Payment Otherwise Enter 'N/n' c\n");
        scanf("\n%s",y1);
        if(strcmpi(y1,"y")==0){
          strcpy(m1.status,"Paid");
          printbill();
        }
        else{
            payment();
        }

    }
    else if(m==2)
    {
        strcpy(m1.method,"Nagad");
        printf("Please Make Payment To This Number (01845878722)\n");
        printf("Have You Made Payment\n");
        printf("Enter 'Y/y' If You Have Made Payment Otherwise Enter 'N/n'To Go Back Again To Select Payment Method\n");
        scanf("\n%s",y1);
        if(strcmpi(y1,'y')==0){
          strcpy(m1.status,"Paid");
          printbill();
        }
        else{
            payment();
        }

    }
    else if(m==3)
    {
        strcpy(m1.method,"Rocket");
        printf("Please Make Payment To This Number (01845878722)\n");
        printf("Have You Made Payment\n");
        printf("Enter 'Y/y' If You Have Made Payment Otherwise Enter 'N/n'To Go Back Again To Select Payment Method\n");
        scanf("\n%s",y1);
        if(strcmpi(y1,'y')==0){
          strcpy(m1.status,"Paid");
          printbill();
        }
        else{
            payment();
        }

    }
    else if(m==4)
    {
        strcpy(m1.method,"Cash On Delevary");
        printf("Please Make Payment To This Number (01845878722)\n");
        printf("Have You Made Payment\n");
        printf("Enter 'Y/y' If You Have Made Payment Otherwise Enter 'N/n'To Go Back Again To Select Payment Method\n");
        scanf("\n%s",y1);
        if(strcmpi(y1,'y')==0){
          strcpy(m1.status,"Unpaid");
          printbill();
        }
        else{
            payment();
        }

    }
    else{
        printf("Invalid Input\nPlease Select Again");
        payment();
    }
}

void printbill()
{
    struct food f1={"Mutton Biriyani",1,170,20};
    struct food f2={"Chicken Biriyani",2,190,24};
    struct food f3={"Rice 1 Plate",3,15,23};
    struct food f5={"Chicken curry",5,70,18};
