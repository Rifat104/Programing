#include<stdio.h>
#include<string.h>
char user[100],pass[100],username[100],passwor[100];
char an[100],ap[100];

////structure start
struct details{
    char name[100];
    char num[100];
    char address[100];
    char username[100];
    char password[100];
    int age;
    };

struct payment{
    char method[100],status[100];
};

struct food{
    char name[100];
    int id,price,stock;
};
struct fq{
    int quantity;
};

struct details u1;
struct food f1,f2,f3,f4,f5,f6,f7,f8,f9,f10,f11,f12;
struct fq q1,q2,q3,q4,q5,q6,q7,q8,q9,q10,q11,q12;
struct payment m1;

////structure end


////main function start
void main()
{
    bk();
}
//main function end


void bk()
{
    char yesno;
    printf("Welcome to RI Food Corner Menu\n");
    printf("Do You Have An Account\nIf You Have An Account Then Enter Y/y\n");
    scanf("\n%c",&yesno);
    if(yesno=='y' || yesno=='Y')
    {
        login();
    }
    else
    {
        signup();
    }
}

////log in function start
void login()
{
    char back;
    printf("Please Enter Your Details to Continue\n");
    printf("If you Clicked By Mistaken Then Please Enter Your b/B to Go Back\n");
    scanf("\n%c",&back);
    if(back=='b' || back=='B')
    {
        bk();
    }
    else{
        usercheck();
    }

}

void usercheck()
{
    struct details u1;
    printf("Please Enter Your Username\n");
    scanf("\n%s",username);
    if(strcmp(username,user)==0 || strcmp(username,"admin")==0)
    {

        passcheck();
    }
    else
    {
        struct details u1;
        printf("Please Check Username And Try Again\n");
        login();
    }
}
void passcheck()
{
    printf("Please Enter Your Password\n");
    scanf("\n%s",passwor);
    if(strcmp(passwor,pass)==0 || strcmp(passwor,"admin")==0)
    {

        printf("\nLog In Successfull");
        printf("\nWelcome %s To RI Food Corner",u1.username);
        aui();
    }
    else
    {
        struct details u1;
        printf("Please Check Password And Try Again\n");
        passcheck1();
    }

}
void passcheck1()
{
    passcheck();
}

////log in function end



////sign up function start
void signup()
{
    printf("Please Enter Details To Sign Up\n");
    printf("Please Enter Name\n");
    scanf("\n%[^\n]",u1.name);
    printf("Please Enter Username\n");
    scanf("\n%s",u1.username);
    strcpy(user,u1.username);
    printf("Please Enter Password\n");
    scanf("\n%s",u1.password);
    strcpy(pass,u1.password);
    printf("Please Enter Age\n");
    scanf("\n%d",&u1.age);
    numcheck();
}
void numcheck()
{
    int x;
    char str1[100];
    printf("Please Enter 11 Digit Phone Number\n");
    scanf("%s",u1.num);
    strcpy(str1,u1.num);
    x=strlen(str1);
    if(x==11)
    {
        printf("Please Enter Address\n");
        scanf("\n%[^\n]",u1.address);
        printf("Sign Up Successfull\nPlease Log In To Continue\n");
        aui();
    }
    else{
        numcheck1();
    }
}
void numcheck1()
{
    numcheck();
}

////sign up function end


////area selection start
void aui()
{
    char areain[100];
    printf("\nTo Continue Buying Food You Need To Pick Your Area");
    printf("\nOur Services is Only Available In These Areas");
    printf("\nArea1\nArea2\nArea3\nArea4\nArea5");
    printf("\nPlease Enter Your Area\n");
    scanf("\n%s",areain);
    if(strcmpi(areain,"area1")==0 || strcmpi(areain,"area2")==0 || strcmpi(areain,"area3")==0 || strcmpi(areain,"area4")==0 || strcmpi(areain,"area5")==0)
    {
        printf("\nOur Available Foods Are\n");
        foodmenu();

    }
    else
    {
        printf("\nOur Service Is Not Available In Your Area");
        printf("\nWe Will Inform You When Our Service Will Be Available In Your Area");
        printf("\nPlease Stay Tunned");
    }
}

////area selection end



