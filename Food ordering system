    printf("\n| %d.%s---------------%d TK(Stock %d)  |      %d.%s--------------------- %d TK(Stock %d)        |",f2.id,f2.name,f2.price,f2.stock,f8.id,f8.name,f8.price,f8.stock);
    printf("\n| %d.%s------------------- %d TK(Stock %d)  |      %d.%s---------------------------- %d TK(Stock %d)       |",f3.id,f3.name,f3.price,f3.stock,f9.id,f9.name,f9.price,f9.stock);
    printf("\n|             Curry Item                             |                           Burger Items                        |");
